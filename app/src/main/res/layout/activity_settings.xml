<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.Activities.ActivitySettings"
    android:background="@color/settings_background">

    <TextView
        android:id="@+id/IP_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/IP_label"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/IP_label"
        android:layout_centerHorizontal="true"
        android:inputType="textShortMessage"
        android:minWidth="48dp"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/IP_port_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ip"
        android:layout_centerInParent="true"
        android:text="@string/IP_port_label"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ip_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/IP_port_label"
        android:layout_centerHorizontal="true"
        android:inputType="textShortMessage"
        android:minWidth="48dp"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ip_port"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/button_background"
        android:text="@string/save_label"
        android:textColor="@color/buttontext_background"
        android:textSize="16sp" />

</RelativeLayout>